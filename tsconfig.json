{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generates .d.ts files
    "declarationDir": "./dist" // Outputs .d.ts files to the dist folder
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
